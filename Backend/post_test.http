Content-Type: application/json

{
	"nickname": "JohnDoe",
	"title": "My First Memory",
	"content": "This is the content of my first memory.",
	"postPassword": "securepassword123",
	"imageUrl": "https://example.com/image.jpg",
	"tags": [ "vacation", "summer" ],
	"location": "New York",
